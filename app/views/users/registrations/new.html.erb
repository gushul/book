<div class="topContent container">

  <h2>User Registration</h2> 

  <% s = session["devise.user_attributes"] %>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: "form-horizontal"} ) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs" style="width:300px;">
      <%= f.input :email, :required => true, :autofocus => true, :input_html => { :value => s["email"] } %>
      <%= f.input :username, :required => true, :input_html => { :value => s["username"] }  %>
      <%= f.input :phone, :required => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" , :class => 'btn btn-success btn-large' %>
    </div>
  <% end %>

  <%#= render "users/shared/links" %>

 </div>
