<div class="screenfade"></div>
<% unless user_signed_in? %>
  <div class="model model-login">
    <div class="header">
      <i class="glyphicon glyphicon-remove" onclick="closeModel('login');"></i>
      <h4 class="lbold">Log In</h4>
    </div>
    <div class="content">
      <button class="btn facebook">Facebook</button>
      <h4 class="rregular">OR Log In With Email Address</h4>
      <div class="error rregular" style="display:none;color:#933b3b;padding:15px 10px;background:#f2dede;border-radius:5px;"><span class="rbold">Invalid Email or Password! </span>&nbsp;&nbsp;Please check it again
      </div>

      <%= form_tag user_session_path do %>
        <div class="email">
          <%= text_field_tag 'email','', :class=> "rregular", :placeholder=>"Email Address" %>
        </div>
        <div class="password">
          <%= password_field_tag 'password', '', :class=> "rregular", :placeholder=>"Password" %>
        </div>
        <div class="submit">
        <%= submit_tag 'LogIn', :class=> "btn lblack" %>
        </div>
      <% end %>
      <h5 class="rregular">For got your password?</h5>
    </div>
  </div>

  <div class="model model-signup">
    <div class="header">
      <i class="glyphicon glyphicon-remove" onclick="closeModel('signup');"></i>
      <h4 class="lbold">Sign Up</h4>
    </div>
    <div class="content">
      <button class="btn facebook">Sign up with Facebook</button>
      <h4 class="rregular">OR Sign In With Email Address</h4>
      <%= form_tag user_registration_path do %>
        <div class="name">
          <%= text_field_tag 'name','', :class=> "rregular", :placeholder=>"Your name" %>
        </div>
        <div class="email">
          <%= text_field_tag 'email','', :class=> "rregular", :placeholder=>"Email Address" %>
        </div>
        <div class="phone">
          <%= text_field_tag 'phone', '', :class=> "rregular", :placeholder=>"Phone" %>
        </div>
        <div class="password">
          <%= password_field_tag 'password', '', :class=> "rregular", :placeholder=>"Password" %>
        </div>
        <div class="password">
          <%= password_field_tag 'confirmpassword', '', :class=> "rregular", :placeholder=>"Confirm Password" %>
        </div>
        <div class="submit">
          <%= submit_tag 'Sign up', :class=> "btn lblack" %>
        </div>
      <% end %>
      <h5 class="rregular">By registration, you are agreeing to out Term of Service</h5>
    </div>
  </div>
<% end %>

<% unless owner_signed_in? %>
  <div class="model model-ownerlogin">
    <div class="header">
      <i class="glyphicon glyphicon-remove" onclick="closeModel('ownerlogin');"></i>
      <h4 class="lbold">Restaurant Owner Log In</h4>
    </div>
    <div class="content">
      <div class="error rregular" style="display:none;color:#933b3b;padding:15px 10px;background:#f2dede;border-radius:5px;">
        <span class="rbold">Invalid Email or Password! </span>&nbsp;&nbsp;Please check it again
      </div>
      <form method="get" action="">
        <div class="email"><input class="rregular" type="text" placeholder="Email Address" name="owneremail" value="admin" /></div>
        <div class="password"><input class="rregular" type="password" placeholder="Password" name="ownerpassword" value="admin" /></div>
        <div class="submit"><input type="submit" class="btn lblack" value="LogIn" /></div>
      </form>
      <h5 class="rregular">For got your password?</h5>
    </div>
  </div>
<% end %>



