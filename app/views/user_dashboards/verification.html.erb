<div id="hh-user" class="topContent container">
  <div class="row">

    <%= render :partial => "setting_left_tab", :locals => {:active_tab => 'verify' }%>
   
   
    <div class="col-sm-9 col-lg-9">
        <div class="settings-panel">
            <div class="header">
              <h3>Verification</h3>
            </div>
            <div class="content">
                  <%= form_tag("/user_dashboards/verification", method: "post") do %>
                    <h4>Please, enter code, that you received in email</h4>
                    <div class="col-sm-3 col-lg-3" style="padding-left: 0px;">
                      <%= text_field_tag :verify_code, nil,  class: "string required form-control" %>
                    </div>
                    <br/>
                    <br/>
                    <div class="form-actions" style="padding-top: 15px;">
                      <%= submit_tag "Submit", :class => "btn btn-primary" %>
                      <%= link_to "Send new code", resend_code_user_dashboards_path, :class => "btn btn-primary" %>
                    </div>
                  <% end %>
            </div>
          </div>
    </div>



  </div><!--/row-->
</div>