<div class="topContent container">
  <div class="row">
    <%= render :partial => "/shared/setting" %>
    <%= render :partial => "/shared/setting_left_tab", :locals => {:active_tab => 'inventories' }%> 
    
    <div class="col-sm-8 col-sm-8">
      <div class="storyContent setting">
        <div class="header">
          <h3 class="rmedium">Inventories</h3>
        </div>
        <div class="content">

          <% unless @inventories.blank? %>
            <table  class="table table-striped table-bordered table-hover">
              <thead>
                  <tr>
                    <th>Restaurant</th>
                    <th>Date</th>
                    <th>Start time</th>
                    <th>End time</th>
                    <th>Quantity available</th>
                    <th></th>
                    <th></th>
                    <th></th> 
                  </tr>
              </thead>
              <% @inventories.each do |inventory| %>
                <tr>
                  <td><%= inventory.try(:restaurant).try(:name) %></td>
                  <td><%= inventory.date %></td>
                  <td><%= mtime(inventory.start_time) %></td>
                  <td><%= mtime(inventory.end_time) %></td>
                  <td><%= inventory.quantity_available %></td>
                  <td><%= link_to 'Show', inventory %></td>
                  <td><%= link_to 'Edit', edit_inventory_path(inventory) if inventory.restaurant.owner == current_owner %></td>
                  <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } if inventory.restaurant.owner == current_owner %></td>
                </tr>
              <% end %>
            </table>
          <% else %>
            There no inventories now
          <% end %>
          <div class="navigation">
            <%= paginate @inventories %>
          </div>
          <br />
          <%= link_to 'New Inventory', new_inventory_path  %>
        </div>
      </div>
    </div>
  </div>
</div>