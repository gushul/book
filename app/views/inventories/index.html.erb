            <%= link_to inv.quantity_available, inv %>
          <% end %>
        <% end %>
      </td>
    <% end %>
  </tr>
  <tr>
    <td style="font-weight:bold;">45</td>
   <% 24.times do |i| %>
      <td>
        <% @inventories4.each do |inv| %>
          <% if inv.start_time_hour == i %>
            <%= link_to inv.quantity_available, inv %>
          <% end %>
        <% end %>
      </td>
    <% end %>
  </tr>
</table>

