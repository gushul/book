<div class="topContent container">
  <div class="row">
    <%= render :partial => "/shared/setting" %>
    <%= render :partial => "/shared/setting_left_tab", :locals => {:active_tab => 'inventories' }%> 
    
    <div class="col-sm-9 col-lg-9">
      <div class="storyContent setting">
        <div class="header">
          <h3 class="rmedium">Inventories</h3>
        </div>
        <div class="content">


<div id="reservations">
  <h3 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h3>
  <%= calendar @date do |date| %>
    <%= content_tag :div, :class => ('today' if (date == @date) ) do %>
      <%= link_to date.day, date: date %>
    <% end %>
  <% end %>
</div>

<p />

<h3>Inventories</h3>

<table class="table table-striped table-bordered table-hover" style="float:left;">
  <thead>
    <tr>
      <th></th>
      <% get_intervals.each_with_index do |interval, index| %>
        <% if index%4 == 0 and interval != "24:00" %>
          <th><%= interval.slice(0..1) %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>

  <tr>
    <td style="font-weight:bold;">00</td>
    <% 24.times do |i| %>
      <td>
        <% @inventories1.each do |inv| %>
          <% if inv.start_time_hour == i %>
            <%= link_to inv.quantity_available, inv %>
          <% end %>
        <% end %>
      </td>
    <% end %>
  </tr>
  <tr>
    <td style="font-weight:bold;">15</td>
    <% 24.times do |i| %>
      <td>
        <% @inventories2.each do |inv| %>
          <% if inv.start_time_hour == i %>
