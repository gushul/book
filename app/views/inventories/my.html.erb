<div class="topContent container">
  <div class="row">
    <div class="col-sm-9 col-lg-9">
      <h2 class="rbold"><%= current_owner.restaurant.name %> inventories</h2>
      <div class="list result">

        <% unless @inventories.blank? %>
          <table  class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                  <th>Date</th>
                  <th>Start time</th>
                  <th>End time</th>
                  <th>Quantity available</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
            </thead>
            <% @inventories.each do |inventory| %>
              <tr>
                <td><%= inventory.date %></td>
                <td><%= mtime(inventory.start_time) %></td>
                <td><%= mtime(inventory.end_time) %></td>
                <td><%= inventory.quantity_available %></td>
                <td><%= link_to 'Show', inventory %></td>
                <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
                <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </table>
        <% else %>
          There no inventories now
        <% end %>

        <br />

        <%= link_to 'New Inventory', new_inventory_path %>

      </div>
    </div>
  </div>
</div>