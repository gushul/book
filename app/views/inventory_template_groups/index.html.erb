<div class="topContent container">
  <div class="row">
    <%= render :partial => "/shared/setting" %>
    <%= render :partial => "/shared/setting_left_tab", :locals => {:active_tab => 'inventory_template_groups' }%>
    <div class="col-sm-8 col-sm-12" style="padding-top:20px;">
      <div class="storyContent setting">
        <div class="header">
          <h3 class="rmedium">Inventory Template Groups</h3>
        </div>
        <div class="content">
        
          <% unless @inventory_template_groups.blank? %>
            <table  class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <!-- <th>Restaurant</th> -->
                  <th>Name</th>
                  <th>Primary</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <% @inventory_template_groups.each do |itg| %>
                <tr>
                  <!-- <td><%#= itg.restaurant.name %></td> -->
                  <td><%= itg.name %></td>
                  <td><%= itg.primary %></td>
                  <td><%= link_to 'Show', itg %></td>
                  <td><%= link_to 'Edit', edit_inventory_template_group_path(itg) %></td>
                  <td><%= link_to 'Destroy', itg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </table>
          <% else %>
            There no inventories template groups now
          <% end %>
          <div class="navigation">
            <%= paginate @inventory_template_groups, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-small pagination-centered" %>
          </div>
          <br />
          <%= link_to 'New Inventory Template Group', new_inventory_template_group_path %>

          <hr/>

<h3>Inventory Templates</h3>

<table class="table table-striped table-bordered table-hover" style="float:left;">
  <thead>
    <tr>
      <th></th>
      <% get_intervals.each_with_index do |interval, index| %>
        <% if index%4 == 0 and interval != "24:00" %>
          <th><%= interval.slice(0..1) %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>

  <tr>
    <td style="font-weight:bold;">00</td>
    <% 24.times do |i| %>
      <td><%= @quantity[0][i] %></td>
    <% end %>
  </tr>
  <tr>
    <td style="font-weight:bold;">15</td>
    <% 24.times do |i| %>
      <td><%= @quantity[1][i] %></td>
    <% end %>
  </tr>
  <tr>
    <td style="font-weight:bold;">30</td>
    <% 24.times do |i| %>
      <td><%= @quantity[2][i] %></td>
    <% end %>
  </tr>
  <tr>
    <td style="font-weight:bold;">45</td>
    <% 24.times do |i| %>
      <td><%= @quantity[3][i] %></td>
    <% end %>
  </tr>
</table>
<br />
<%= link_to 'New Inventory Template', new_inventory_template_path %>
<br />

        </div>
      </div>
    </div>
  </div>
</div>