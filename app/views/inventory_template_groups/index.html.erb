<div class="topContent container">
  <div class="row">
    <%= render :partial => "/shared/setting" %>
    <%= render :partial => "/shared/setting_left_tab", :locals => {:active_tab => 'inventory_template_groups' }%>
    <div class="col-sm-9 col-lg-9">
      <div class="storyContent setting">
        <div class="header">
          <h3 class="rmedium">Inventory Template Groups</h3>
        </div>
        <div class="content">

          <div class="options">
              <div class="pull-right actions">
                <%= link_to "New Inventory Template Group".upcase, new_inventory_template_group_path, class: "btn btn-primary action" %>
              </div>
          </div>


          <% unless @inventory_template_groups.blank? %>
            <table  class="table table-striped table-hover">
              <thead>
                <tr>
                  <!-- <th>Restaurant</th> -->
                  <th>NAME</th>
                  <th>PRIMARY</th>
                  <th></th>
                </tr>
              </thead>
              <% @inventory_template_groups.each do |itg| %>
                <tr>
                  <!-- <td><%#= itg.restaurant.name %></td> -->
                  <td><%= itg.name %></td>
                  <td><%= itg.primary %></td>
                  <td>
                    <div class="pull-right">
                    <%= link_to '<i class="glyphicon glyphicon-search action" id="viewInventory"></i>'.html_safe, itg %>
                    <%= link_to '<i class="glyphicon glyphicon-edit action" id="editInventory"></i>'.html_safe, edit_inventory_template_group_path(itg) %>
                    <%= link_to '<i class="glyphicon glyphicon-remove action" id="deleteInventory"></i>'.html_safe, itg, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </table>
          <% else %>
            There no inventories template groups now
          <% end %>
          <div class="navigation">
            <%= paginate @inventory_template_groups, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-small pagination-centered" %>
          </div>
          <br />
          


