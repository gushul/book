<div id="hh-owner" class="topContent container">
  <div class="row">

    <%= render :partial => "setting_left_tab", :locals => {:active_tab => 'reservation' }%>
    
    <div class="col-sm-9 col-lg-9">
      <div class="storyContent setting" id ="dashboard">
      <!-- <div class="settings-panel"> -->
            <div class="header">
              <h3>Reservations</h3>
            </div>
            <div class="content">
              <div id="reservations">
                <ul class="media-list">
                  <li class="media">
                    <div class="media-body">
                      <div class="col-sm-12 col-lg-8">
                        <form action="" method="get" role="form">
                          <!-- Date Picker -->
                          <div class="form-group">
                            <label>Date</label>
                            <div id="date-picker">
                              <div class="input-group date" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input type="text" class="form-control" value="dd-mm-yyyy" id="datepicker" name="datepicker" data-date-format="dd-mm-yyyy">
                              </div>
                              <script type="text/javascript">$('#datepicker').datepicker();</script>
                            </div>
                          </div>
                          <!-- Time Picker -->
                          <div class="form-group">
                            <label>Time</label>
                            <div id="time-picker">
                              <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
                                <input type="text" class="form-control" id="timepicker" name="timepicker">
                              </div>
                              <script type="text/javascript">$('#timepicker').timepicker({showMeridian: false});</script>
                            </div>
                          </div>
                          <!-- Status of Booking -->
                          <div class="form-group">
                            <label>Status of Booking</label>
                            <select class="form-control">
                              <option>Pending</option>
                              <option>Cancle</option>
                            </select>
                          </div>
                          <!-- Name -->
                          <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" value="Belle Aramwattananont">
                          </div>
                          <!-- Phone -->
                          <div class="form-group">
                            <label>Phone</label>
                            <input type="text" class="form-control" value="+66(0)84 5655 4455">
                          </div>
                          <!-- Email -->
                          <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" value="bellawanna@mail.com">
                          </div>
                          <!-- Cover -->
                          <div class="form-group">
                            <label>Cover</label>
                            <select class="form-control">
                              <option>1</option>
                              <option>2</option>
                              <option>3</option>
                              <option>4</option>
                              <option>5</option>
                              <option>6</option>
                              <option>7</option>
                              <option>8</option>
                              <option>9</option>
                              <option>10</option>
                            </select>
                          </div>
                          <!-- VIP Status -->
                          <div class="form-group">
                            <label>VIP Status</label>
                            <select class="form-control">
                              <option>VIP</option>
                              <option>Normal</option>
                            </select>
                          </div>
                          <!-- Special Request -->
                          <div class="form-group">
                            <label>Special Request</label>
                            <textarea class="form-control" rows="4"></textarea>
                          </div>
                          <!-- Timestamp -->
                          <div class="form-group">
                            <label>Reservation Timestamp</label>
                            <input type="text" class="form-control" value="20/11/13 - 18:00">
                          </div>
                          <!-- Channel -->
                          <div class="form-group">
                            <label>Channel</label>
                            <select class="form-control">
                              <option>Call</option>
                              <option>Hungry Hub</option>
                            </select>
                          </div>
                          <!-- Seat -->
                          <div class="form-group">
                            <label>Seat Number</label>
                            <input type="text" class="form-control" value="7A">
                          </div>
                          <hr>
                          <!-- Update -->
                          <div class="form-group">
                            <div class="col-lg-4">
                              <button type="submit" class="btn btn-table">Save</button>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
    </div>


  </div><!--/row-->
</div>


