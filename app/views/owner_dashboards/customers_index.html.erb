<div class="topContent container">
  <div class="row">
    <%= render :partial => "/shared/setting"%>
    <%= render :partial => "/shared/setting_left_tab", :locals => {:active_tab => 'customers' }%>
    
    <div class="col-sm-9 col-lg-9">
    
      <div class="storyContent setting" id ="dashboard">
        <div class="header">
          <h3 class="rmedium">Customers</h3>
        </div>
        <div class="content">


          <table  class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <!-- <th>User (if present)</th> -->
                <th>Name</th>
                <th>Phone</th>
                <th>VIP</th>
              </tr>
            </thead>

            <tbody>
              <% @info_json.each do |user| %>
                <tr>
                  <!-- <td><%#= user[:user_id].present? ? User.where(:id => user[:user_id]).first.username : "" %></td> -->
                  <td><%= user[:name] %></td>
                  <td><%= user[:phone] %></td>
                  <td>
                    <% if user[:vip] == true  %>
                      <%= link_to "Remove from VIP", vips_path(:user => user), method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% else %>
                      <%= link_to "Add to VIP", vips_path(:user => user), method: :post %>
                    <% end %>

                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>


          <br>
        </div>
      </div>
    </div>
  </div><!--/row-->
</div>