<div class="tab-pane fade" id="schedule">
  <ul class="media-list">
    <li class="media">
      <div class="media-body">
        <div class="col-sm-12 col-lg-12">

          <% @restaurant = current_owner.restaurant %>
          <%= simple_form_for( @restaurant, html: { class: "form-horizontal"}) do |f| %>
            
            <div class="row">
              <div class="col-sm-12 col-lg-3" style="padding-right: 15px;">
                <%= f.input :mon, label: "Monday", collection: @restaurant.inventory_template_groups %>
              </div>
              <div class="col-sm-12 col-lg-3" style="padding-right: 15px;">
                <%= f.input :tue, label: "Tuesday", collection: @restaurant.inventory_template_groups %>
              </div>
              <div class="col-sm-12 col-lg-3" style="padding-right: 15px;">
                <%= f.input :wed, label: "Wednesday", collection: @restaurant.inventory_template_groups %>
              </div>
              <div class="col-sm-12 col-lg-3" style="padding-right: 15px;">
                <%= f.input :thu, label: "Thursday", collection: @restaurant.inventory_template_groups %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-12 col-lg-3" style="padding-right: 15px;">
                <%= f.input :fri, label: "Friday", collection: @restaurant.inventory_template_groups %>
              </div>
              <div class="col-sm-12 col-lg-3" style="padding-right: 15px;">
                <%= f.input :sat, label: "Saturday", collection: @restaurant.inventory_template_groups %>
              </div>
              <div class="col-sm-12 col-lg-3" style="padding-right: 15px;">
                <%= f.input :sun, label: "Sunday", collection: @restaurant.inventory_template_groups %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12 col-lg-4">
                <%= f.button :submit, "UPDATE", class: "btn btn-table" %>
              </div>
            </div>

          <% end %>

       
        </div>
      </div>
    </li>
  </ul>
</div>