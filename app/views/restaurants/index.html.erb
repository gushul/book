<div class="topContent container">
  <div class="row">
    <%= render :partial => "/shared/setting" %>
    <%= render :partial => "/shared/setting_left_tab", :locals => {:active_tab => 'my_restaurant' }%>
    <div class="ccol-sm-9 col-lg-9">
      <div class="storyContent setting">
        <div class="header">
          <h3 class="rmedium">Restaurants</h3>
        </div>
        <div class="content"> 
        
          <% unless @restaurants.blank? %>
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th>Restaurant tags</th>
                  <th>Misc</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr> 
              </thead>

              <% @restaurants.each do |restaurant| %>
                <tr>
                  <td><%= image_tag restaurant.photos.first.picture.url(:v100x100) if restaurant.photos.first %></td>
                  <td><%= link_to "#{restaurant.name}", restaurant %></td>
                  <td><%= join_restaurant_tags(restaurant) %></td>
                  <td><%= truncate(restaurant.misc, length: 100, omission: '... (continued)') %></td>
                  <td><%= link_to 'Show', restaurant %></td>
                  <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
                  <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </table>
          <% else %>
            There no restaurants now
          <% end %>
          <br />
          <%= link_to 'New Restaurant', new_restaurant_path %>
        </div>
      </div>
    </div>
  </div>
</div>
