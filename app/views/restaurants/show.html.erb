<div class="topContent container">

     <div class="row">
        <div class="col-sm-8 col-lg-8">
            <h2 class="rmedium">The Garret Secret Bistro</h2>
      <div class="slideshow">
        <!-- <img src="../images/slideshow.jpg" width="100%" height="auto"/> -->
        <%= image_tag @image_tag_string, :width => '100%', :height => "auto" %>

        <div class="thumbnails">
          <% unless @restaurant.photos.blank? %>
              <% @restaurant.photos.each do |pic| %>
                <div class="thumbnail">
                  <%= image_tag pic.picture.url(:v100x100) %>
                </div>
              <% end %>
          <% else %>
            None
          <% end %>
